e.log(\"111\");\r\n        if (event.target.innerHTML == \"+\") {\r\n          this.list[i].count++;\r\n          console.log(this.list[i].count);\r\n        } else if (event.target.innerHTML == \"-\") {\r\n          this.list[i].count--;\r\n          if (this.list[i].count < 1) {\r\n            this.list[i].count = 1;\r\n          }\r\n        }\r\n        span.innerHTML = this.list[i].count;\r\n      },\r\n      addcart(evnet) {\r\n        //将商品添加至购物车\r\n        //1.添加参数event事件对象\r\n        //2.获取单个定义属性，输出属性再写后续内容\r\n        var img_url = event.target.dataset.img;\r\n        var pid = event.target.dataset.pid;\r\n        var pname = event.target.dataset.pname;\r\n        var price = event.target.dataset.price;\r\n        //3.创建url请求服务器地址\r\n        var url = \"addcart\";\r\n        //4.创建obj添加参数\r\n        var obj = { pid: pid, pname: pname, price: price, img_url: img_url };\r\n        //5.发送ajax访问服务器程序\r\n        this.axios.get(url, { params: obj }).then(res => {\r\n          console.log(res.data);\r\n          if (res.data.code == -1) {\r\n            //显示一个提示框\r\n            this.$messagebox(\"消息\", \"请登录\").then(res => {\r\n              //回退:跳转登录组件 16:30\r\n              this.$router.push(\"/Login\");\r\n            });\r\n          } else if (res.data.code == -2) {\r\n            this.$messagebox(\"消息\", \"添加失败\");\r\n          } else {\r\n            this.$messagebox(\"消息\", \"添加成功\");\r\n          }\r\n          // console.log(res);\r\n        });\r\n      }\r\n    }\r\n  };\r\n</script>\r\n<style>\r\n  .d0 {\r\n    display: flex; /*弹性布局*/\r\n    flex-wrap: wrap; /*指定子元素换行*/\r\n    justify-content: space-between; /*两端对齐*/\r\n    padding: 4px; /*内边距*/\r\n  }\r\n  .d1 {\r\n    width: 49%;\r\n    border: 1px solid #ccc; /*商品灰色边框*/\r\n    border-radius: 5px; /*圆角*/\r\n    margin: 2px 0;\r\n    padding: 2px;\r\n    box-sizing: border-box; /*重新计算元素宽度*/\r\n    height: 50%;\r\n    position: relative;\r\n  }\r\n  .i1 {\r\n    display: inline-block;\r\n    height: 6